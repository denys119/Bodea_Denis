@page
@model Bodea_Denis.Pages.Dotari.CreateModel

@{
    ViewData["Title"] = "Dotari";
}

<h1>Adaugare Dotari</h1>

<h4>Dotari</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dotare.DotareNume" class="control-label"></label>
                <input asp-for="Dotare.DotareNume" class="form-control" />
                <span asp-validation-for="Dotare.DotareNume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Creare" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Inapoi la pagina de start</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
