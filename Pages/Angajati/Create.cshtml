@page
@model Bodea_Denis.Pages.Angajati.CreateModel

@{
    ViewData["Title"] = "Creare Angajati";
}

<h1>Adauga angajat</h1>

<h4>Angajati</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Angajat.NumeAngajat" class="control-label"></label>
                <input asp-for="Angajat.NumeAngajat" class="form-control" />
                <span asp-validation-for="Angajat.NumeAngajat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Creare" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Inapoi la pagina principala</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
